<%- include('../partials/head', { title: 'Ella Rises' }) %>
<%- include('../partials/navbar', { currentPath: '/admin/donations' }) %>
<div class="min-h-screen bg-background pt-28 pb-20">
  <div class="container mx-auto px-6">
    <h1 class="text-4xl md:text-6xl font-serif text-foreground mb-8">Donations</h1>
    <div id="donations-container" class="bg-card border border-border rounded-xl p-6">
      <p class="text-foreground/60">Loading donations...</p>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
<script>
  fetch('/api/donations/summary')
    .then(r => r.json())
    .then(donations => {
      const container = document.getElementById('donations-container');
      container.innerHTML = donations.map(d => `
        <div class="border-b border-border py-4">
          <p>${d.ParticipantFirstName} ${d.ParticipantLastName}</p>
          <p class="text-primary font-bold">$${parseFloat(d.TotalDonations).toLocaleString()}</p>
        </div>
      `).join('');
    });
</script>


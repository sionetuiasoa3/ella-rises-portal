<%- include('partials/head', { title: 'Ella Rises - Empowering Women in STEAM' }) %>
<%- include('partials/navbar', { currentPath: '/' }) %>
<div class="min-h-screen bg-background">
  <!-- Hero Section -->
  <section class="relative pt-28 pb-8 md:pt-36 md:pb-12 overflow-hidden bg-cover bg-center">
    <div class="absolute inset-0 bg-gradient-to-b from-muted/60 via-background to-background"></div>
    <!-- Top left corner gradient - fills the whole hero section -->
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-ella-cream/75 via-ella-blush/50 to-transparent pointer-events-none"></div>
    <!-- Additional subtle overlay for depth -->
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-ella-sage/20 via-transparent to-transparent pointer-events-none"></div>
    <div class="container mx-auto px-6 relative">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 bg-ella-sage/30 border border-primary/30 text-foreground/80 px-5 py-2.5 rounded-full mb-10 text-sm font-medium">
          <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path></svg>
          Empowering Women in STEAM
        </div>
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-serif text-foreground mb-8 leading-[1.1]">
          Where Women <span class="italic text-primary">Rise</span><br>Together
        </h1>
        <p class="text-lg md:text-xl text-foreground/70 mb-12 max-w-2xl mx-auto leading-relaxed">
          Empowering the rising generation of women to pursue higher education and embrace their heritage through mentoring, creative workshops, and leadership opportunities.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/events" class="bg-primary hover:bg-primary/90 text-primary-foreground px-8 py-6 text-base rounded-lg inline-flex items-center justify-center">
            Explore Events
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
          </a>
          <a href="/donate" class="bg-white border border-primary text-primary hover:bg-primary/5 px-8 py-6 text-base rounded-lg inline-flex items-center justify-center">
            Support Our Mission
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="relative py-8 md:py-12 bg-background">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary mb-2">500+</div>
          <div class="text-sm md:text-base text-foreground/70 font-medium">Women Empowered</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary mb-2">50+</div>
          <div class="text-sm md:text-base text-foreground/70 font-medium">Workshops Held</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary mb-2">85%</div>
          <div class="text-sm md:text-base text-foreground/70 font-medium">STEAM Graduation Rate</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary mb-2">20+</div>
          <div class="text-sm md:text-base text-foreground/70 font-medium">Partner Schools</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="py-12 md:py-16 bg-background relative overflow-hidden">
    <!-- Subtle decorative background pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 left-0 w-96 h-96 bg-primary rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-ella-sage rounded-full blur-3xl"></div>
    </div>
    <!-- Subtle top border -->
    <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent"></div>
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-10">
        <div class="inline-flex items-center gap-2 bg-white/80 backdrop-blur-sm border border-primary/20 text-foreground/80 px-5 py-2 rounded-full mb-4 text-sm font-medium shadow-sm">
          <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
          Moments That Inspire
        </div>
        <h2 class="text-3xl md:text-5xl font-serif text-foreground">Our <span class="italic text-primary">Events</span></h2>
      </div>
      <div class="grid md:grid-cols-3 gap-6 max-w-6xl mx-auto">
        <div class="relative group overflow-hidden rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-white/50 hover:border-primary/30">
          <img src="/images/folklorico-dancer-1.png" alt="Traditional Mexican folk dance performance" class="aspect-video w-full object-cover group-hover:scale-110 transition-transform duration-500" />
          <div class="absolute inset-0 bg-gradient-to-t from-ella-charcoal/80 via-ella-charcoal/40 to-transparent">
            <div class="absolute bottom-6 left-6 text-white">
              <p class="text-base font-semibold drop-shadow-lg">Cultural Heritage</p>
            </div>
          </div>
        </div>
        <div class="relative group overflow-hidden rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-white/50 hover:border-primary/30">
          <img src="/images/animation-workshop.jpg" alt="Animation workshop with participants" class="aspect-video w-full object-cover group-hover:scale-110 transition-transform duration-500" />
          <div class="absolute inset-0 bg-gradient-to-t from-ella-charcoal/80 via-ella-charcoal/40 to-transparent">
            <div class="absolute bottom-6 left-6 text-white">
              <p class="text-base font-semibold drop-shadow-lg">Creative Workshops</p>
            </div>
          </div>
        </div>
        <div class="relative group overflow-hidden rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-white/50 hover:border-primary/30">
          <img src="/images/byu-group-photo.jpg" alt="Ella Rises group at BYU" class="aspect-video w-full object-cover group-hover:scale-110 transition-transform duration-500" />
          <div class="absolute inset-0 bg-gradient-to-t from-ella-charcoal/80 via-ella-charcoal/40 to-transparent">
            <div class="absolute bottom-6 left-6 text-white">
              <p class="text-base font-semibold drop-shadow-lg">Campus Tours</p>
            </div>
          </div>
        </div>
        <div class="relative group overflow-hidden rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-white/50 hover:border-primary/30">
          <img src="/images/mariachi-performance.jpeg" alt="Mariachi performance" class="aspect-video w-full object-cover group-hover:scale-110 transition-transform duration-500" />
          <div class="absolute inset-0 bg-gradient-to-t from-ella-charcoal/80 via-ella-charcoal/40 to-transparent">
            <div class="absolute bottom-6 left-6 text-white">
              <p class="text-base font-semibold drop-shadow-lg">Mariachi Performances</p>
            </div>
          </div>
        </div>
        <div class="relative group overflow-hidden rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-white/50 hover:border-primary/30">
          <img src="/images/mentorship-talk.jpg" alt="Mentorship session" class="aspect-video w-full object-cover group-hover:scale-110 transition-transform duration-500" />
          <div class="absolute inset-0 bg-gradient-to-t from-ella-charcoal/80 via-ella-charcoal/40 to-transparent">
            <div class="absolute bottom-6 left-6 text-white">
              <p class="text-base font-semibold drop-shadow-lg">Mentorship Programs</p>
            </div>
          </div>
        </div>
        <div class="relative group overflow-hidden rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-white/50 hover:border-primary/30">
          <img src="/images/community-event.jpg" alt="Community event" class="aspect-video w-full object-cover group-hover:scale-110 transition-transform duration-500" />
          <div class="absolute inset-0 bg-gradient-to-t from-ella-charcoal/80 via-ella-charcoal/40 to-transparent">
            <div class="absolute bottom-6 left-6 text-white">
              <p class="text-base font-semibold drop-shadow-lg">Community Events</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="py-12 md:py-16 relative overflow-hidden">
    <!-- Subtle gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-ella-blush/25 via-ella-cream/20 to-ella-peach/15 pointer-events-none"></div>
    <div class="container mx-auto px-6 relative z-10">
      <div class="grid md:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div>
          <div class="inline-flex items-center gap-2 bg-ella-sage/40 border border-ella-sage/30 text-foreground/80 px-5 py-3 rounded-full mb-6 text-base md:text-lg font-medium">
            <svg class="h-5 w-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path></svg>
            Our Mission
          </div>
          <h2 class="text-4xl md:text-6xl lg:text-7xl font-serif text-foreground mb-6 leading-tight">
            Every Girl Deserves to <span class="italic text-primary">Shine</span>
          </h2>
          <p class="text-foreground/70 mb-6 leading-relaxed text-xl md:text-2xl">
            Ella Rises is dedicated to empowering young women through transformative programs that build confidence, develop leadership skills, and create lasting connections.
          </p>
          <p class="text-foreground/70 mb-8 leading-relaxed text-lg md:text-xl">
            Through workshops, mentorship programs, and community events, we create safe spaces where teen girls can explore their potential and develop the skills they need to thrive.
          </p>
          <a href="/about" class="border-foreground/20 text-foreground hover:bg-foreground/5 rounded-lg px-6 py-3 inline-flex items-center border">
            Learn More About Us
            <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
          </a>
        </div>
        <div class="relative">
          <img src="/images/summer-summit-group.jpg" alt="Ella Rises participants at Summer Summit" class="aspect-[4/3] w-full object-cover object-center rounded-3xl shadow-xl" />
        </div>
      </div>
    </div>
  </section>

  <!-- Cultural Heritage & Community Section -->
  <section class="py-12 md:py-16">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl">
          <img src="/images/folklorico-dancer-2.png" alt="Traditional Mexican folk dance" class="w-full h-[300px] md:h-[400px] object-cover object-center" />
          <div class="absolute inset-0 bg-gradient-to-t from-ella-charcoal/70 via-transparent to-transparent"></div>
          <div class="absolute bottom-6 left-6 md:bottom-10 md:left-10 text-white">
            <p class="text-sm md:text-base font-medium text-ella-warm-cream/90 mb-2">Celebrating Heritage</p>
            <h3 class="text-2xl md:text-3xl font-serif">Cultural <span class="italic">Pride</span></h3>
          </div>
        </div>
        <div class="relative rounded-3xl overflow-hidden shadow-2xl">
          <img src="/images/group-walking.jpg" alt="Ella Rises participants walking together" class="w-full h-[300px] md:h-[400px] object-cover object-center" />
          <div class="absolute inset-0 bg-gradient-to-t from-ella-charcoal/70 via-transparent to-transparent"></div>
          <div class="absolute bottom-6 left-6 md:bottom-10 md:left-10 text-white">
            <p class="text-sm md:text-base font-medium text-ella-warm-cream/90 mb-2">Building Community</p>
            <h3 class="text-2xl md:text-3xl font-serif">Together We <span class="italic">Rise</span></h3>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-28 bg-gradient-to-br from-ella-charcoal via-ella-charcoal to-ella-charcoal/95">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-5xl font-serif text-white mb-6">
        Help Us <span class="italic text-ella-pink">Rise</span> Together
      </h2>
      <p class="text-white/60 max-w-3xl mx-auto mb-10 text-lg">
        Your support enables us to continue providing transformative STEAM programs, mentoring opportunities, and leadership development for the rising generation of women.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/donate" class="bg-primary hover:bg-primary/90 text-primary-foreground px-10 py-6 text-base rounded-lg inline-flex items-center justify-center">
          Make a Donation
          <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
        </a>
        <a href="/about" class="bg-ella-sage text-ella-charcoal hover:bg-ella-sage/90 px-10 py-6 text-base rounded-lg font-medium inline-flex items-center justify-center">
          Volunteer With Us
        </a>
      </div>
    </div>
  </section>
</div>
<%- include('partials/footer') %>
<%- include('partials/footer-scripts') %>

